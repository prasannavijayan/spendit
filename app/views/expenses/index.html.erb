<div class="container">
  <div class="row">

    <%= render('sidemenu') %>

    <div class="col-xs-9">
      <h2>Expenses on <%= @date.strftime("%B") %></h2>
      <h6><i class="fa fa-calendar"></i> <%= @date.strftime("%B %d, %Y") %></h6>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Amount</th>
            <th>Created by</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% unless @expenses[@month].nil? %>
            <% @expenses[@month].each do |expense| %>
              <tr>
                <td><%= expense.title %></td>
                <td>â‚¹<%= expense.amount %></td>
                <% unless expense.user.nil? %>
                  <td><%= expense.user.email %></td>
                <% else %>
                  <td> - </td>
                <% end %>
                <td><%= expense.created_at.strftime("%B %d, %Y") %></td>
                <td><%= link_to raw('<i class="fa fa-eye"></i>'), expense %></td>
                <% if expense.user.email == @current_user.email %>
                  <td><%= link_to raw('<i class="fa fa-pencil"></i>'), edit_expense_path(expense) %></td>
                  <td><%= link_to raw('<i class="fa fa-trash"></i>'), expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% else %>
                  <td><td>
                  <td><td>
                <% end %>
              </tr>
            <% end %>
          <% else %>
            <tr><td><p class="text-small">No Expenses found.</p></td></tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to raw('<i class="fa fa-plus"></i> Add New'), new_expense_path %>
      <br><br>
      <% if @this_month_budget %>
        <div class="col-xs-4">
          <%= simple_form_for @user_budget, html: {class: 'form-horizontal' } do |f| %>
            <%= f.input :month, :as => :hidden, :input_html => { :value => "this" } %>
            <%= f.input :budget, wrapper_html: { class: 'form-group' }, placeholder: 'Your budget for this month', input_html: { class: 'form-control' } %>
            <%= f.button :submit, class: 'btn btn-success' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
