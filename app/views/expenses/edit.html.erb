<div class="container">

  <%= render('sidemenu') %>

  <div class="col-xs-6 expense-pane">
    <h2>Expenses on <%= @date.strftime("%B") %></h2>
    <div class="row">
      <div class="col-xs-4">
        <i class="fa fa-calendar"></i> <%= @date.strftime("%B %d, %Y") %>
      </div>
      <div class="col-xs-8 text-right">
        <%= link_to raw('<i class="fa fa-plus"></i> Add New'), new_expense_path %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-2">
        <%= link_to raw('<i class="fa fa-arrow-left"></i> back'), root_path %>
      </div>
      <div class="col-xs-5">
        <p><i class="fa fa-pencil"></i> Editing Expense</p>
      </div>
    </div>
    <hr>
    <%= render 'form' %>


  </div>

</div>
