<div class="container">

  <div class="row">

    <%= render('sidemenu') %>

    <div class="col-xs-9">
      <h2>Expenses on <%= @date.strftime("%B") %></h2>
      <h6><i class="fa fa-calendar"></i> <%= @date.strftime("%B %d, %Y") %></h6>
      <hr>
      <div class="row">
        <div class="col-xs-2">
          <%= link_to raw('<i class="fa fa-arrow-left"></i> back'), expenses_path %>
        </div>
        <div class="col-xs-5">
          <p><i class="fa fa-pencil"></i> Editing Expense</p>
        </div>
        <div class="col-xs-5">
          <div class="col-xs-4">
            <%= link_to raw('<i class="fa fa-eye"></i> show'), @expense %>
          </div>
          <div class="col-xs-4">
            <%= link_to raw('<i class="fa fa-plus"></i> Add New'), new_expense_path %>
          </div>
        </div>
      </div>
      <hr>
      <%= render 'form' %>


    </div>
  </div>
</div>
