<!DOCTYPE html>
<html>
<head>
  <title>Spendit</title>

  <%= csrf_meta_tags %>
</head>
<body class="top-space">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <div class="top-stripe"></div>
  <!-- Flash message -->
  <div class="container">
    <%= flash_messages %>
  </div>
  <div class="container">

    <%= render('expenses/sidemenu') %>

    <%= yield %>

    <div class="col-xs-3">
      <%= render "expenses/budget_pane" %>
    </div>
  </div>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
